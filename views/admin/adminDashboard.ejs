// Fetch weekly data initially and update the chart
(async () => {
  const weeklyData = await fetchWeeklyData();
  const labels = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
  const data = weeklyData.map(day => day.totalSales);
  const chartData = {
    labels: labels,
    datasets: [{
      label: '# of Sales',
      data: data,
      backgroundColor: 'rgba(255, 99, 132, 0.2)',
      borderColor: 'rgba(255, 99, 132, 1)',
      borderWidth: 1,
      fill: false
    }]
  };
  updateChart(chartData);
})();

timeRangeDropdown.addEventListener('change', async () => {
  const selectedTimeRange = timeRangeDropdown.value;
  console.log(selectedTimeRange)
  let labels = [];
  let data = [];
  console.log(data)

  if (selectedTimeRange === 'weekly') {
    const weeklyData = await fetchWeeklyData();
    labels = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
    data = weeklyData.map(day => day.totalSales);
  } else if (selectedTimeRange === 'monthly') {
    const monthlyData = await fetchMonthlyData();
    const currentMonth = new Date().getMonth();
    labels = getMonthLabels(currentMonth);
    data = monthlyData.slice(0, currentMonth + 1);
  } else if (selectedTimeRange === 'yearly') {
    const yearlyData = await fetchYearlyData();
    labels = ['2018', '2019', '2020', '2021', '2022', '2023'];
    data = yearlyData;
  }

  const chartData = {
    labels: labels,
    datasets: [{
      label: '# of Sales',
      data: data,
      backgroundColor: 'rgba(255, 99, 132, 0.2)',
      borderColor: 'rgba(255, 99, 132, 1)',
      borderWidth: 1,
      fill: false
    }]
  };

  updateChart(chartData);
});
