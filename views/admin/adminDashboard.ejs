// Define the default time range
const timeRangeDropdowns = document.getElementById('timeRangeDropdowns');
timeRangeDropdowns.addEventListener('change', async () => {
  const selectedTimeRange = timeRangeDropdowns.value;
  console.log(selectedTimeRange);

  let labels = [];
  console.log(labels);
  let data = [];
  console.log(data);

  if (selectedTimeRange === 'month') {
    const monthlyData = await fetchMonDatas();
    const currentMonth = new Date().getMonth();
    labels = getMonthLabels(currentMonth);
    data = monthlyData.slice(0, currentMonth + 1);
  }else if(selectedTimeRange === 'year'){
    const yearlyData = await fetchYearlyData();
    labels = ['2018', '2019', '2020', '2021', '2022', '2023'];
    data = yearlyData;
  }

  const barChartData = {
    labels: labels,
    datasets: [{
      label: '# of Orders',
      data: data,
      backgroundColor: 'rgba(255, 99, 132, 0.2)',
      borderColor: 'rgba(255, 99, 132, 1)',
      borderWidth: 1,
      fill: false
    }]
  };

  updatebarChart(barChartData);
});

async function fetchMonDatas() {
  const response = await fetch('/admin/ordermonth');
  const data = await response.json();

  const ordersData = data.map(item => item.totalOrders);

  return ordersData;
}
async function fetchYearlyData() {
  const response = await fetch('/admin/orderyear');
  const datas = await response.json();
