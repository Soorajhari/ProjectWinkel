                            <th>Name</th>
                            <!-- <th>Description</th> -->
                            <th>Price</th>
                            <th>Category</th>
                            <th>Color</th>
                            <th>Size</th>
                            <th>Stock</th>
                            <th>Image</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% product.forEach(function(item, index) { %>
                            
                              <tr data-product-id="<%= item._id %>">
                                <td><%= index + 1 %></td>
                                <td><%= item.name %></td>
                                <!-- <td><%= item.description %></td> -->
                                <td><%= item.price %></td>
                                <td><%= item.categoryId?.name %></td>
                                <td><%= item.Color %></td>
                                <td><%= item.Size %></td>
                                <td><%= item.Stock %></td>
                               <td>
                                <% if (item.image && Array.isArray(item.image)) { %>
                                  <% item.image.forEach(function(image, imageIndex) { %>
                                    <% const imagePath = image.replace('public', ''); %>
                                    <img class="image" style="width: 80px;height: 20vh; border-radius: 0px;" src="<%= imagePath %>" alt="no">
                                  <% }) %>
                                <% } %>
                                
                              </td>
                                <td>
                                  <a href="product/editProduct/<%= item._id %>" class="btn btn-warning">Edit</a>
                                  <button type="button" class="btn btn-danger delete-btn" id="hero"  data-product-id="<%= item._id %>" data-toggle="modal" data-target="#deleteModal">Delete</button>
                                  <div id="confirm-dialog" style="display: none; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #ffffff; width: 500px; height: 150px; border: none; text-align: center;" class="shadow">
                                    <p   style="color: black; font-weight: bold" class="mt-4">Are you sure you want to remove this product?</p>
                                    <button onclick="hideDialog()" data-product-id="<%= item._id %>" class="btn btn-primary w-25">Yes</button>
                                    <button onclick="hideDialog()" class="btn btn-secondary w-25">No</button>
                                  </div>
                                </td>
                              </tr>
                           
                          <% }) %>
                        </tbody>
