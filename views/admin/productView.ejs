function showDialog(productId) {
  $("#confirm-dialog").show();
  $("#confirm-dialog button.btn-primary").data("product-id", productId);
}

$(document).on("click", "#confirm-dialog button.btn-primary", function() {
  const productId = $(this).data("product-id");
