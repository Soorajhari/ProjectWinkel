       $(document).ready(function() {
  var returnId = $('#statusDropdown').data('returnid');
  console.log(returnId);
  
  $.ajax({
    url: '/admin/editreturn/' + returnId, 
    method: 'GET',
    success: function(response) {
      console.log(response);
      
      // Set the selected attribute based on the response status
      $('#statusDropdown option[value="' + response.status + '"]').prop('selected', true);
    },
    error: function(error) {
      console.error('Error fetching order status:', error);
    }
  });

  $('#statusDropdown').change(function() {
    var status = $(this).val();
    var returnId = $(this).data('returnid');

    $.ajax({
      url: '/admin/editreturn/' + returnId,
      method: 'POST',
      data: { status: status }, 
      success: function(response) {
        console.log(response);
        $('#statusDropdown' + returnId).text(status); 
      },
      error: function(error) {
        console.error('Error updating status:', error);
      }
    });
  });
});


