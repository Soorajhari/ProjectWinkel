    <script>
 $(document).ready(function () {
  $(".apply-btn").on("click", function () {
    const offerId = $(this).data("offer-id");
    console.log(offerId);

    $.ajax({
      url: "/admin/offer",
      method: "POST",
      data: `offerId=${offerId}`, // Send offerId as a string
      success: function (response) {
        console.log(response);
      },
      error: function (xhr, status, error) {
        console.error(error.message);
        if (xhr.responseJSON && xhr.responseJSON.message) {
          const errorMessage = xhr.responseJSON.message;
          console.log(errorMessage);
          showError(xhr.responseJSON.message);
        }
      },
    });
  });
});
    </script>


<script>
  $(document).on("click", ".delete-btn", function() {
  const offerId = $(this).data("offer-id");
  console.log(offerId);
  showDialog(offerId);
});

function showDialog(offerId) {
  $("#confirm-dialog").show();
  $("#confirm-dialog button.btn-primary").data("offer-id", offerId);
}

$(document).on("click", "#confirm-dialog button.btn-primary", function() {
  const offerId = $(this).data("offer-id");
  console.log(offerId);

  $.ajax({
    url: "/admin/offer/delete",
    method: "POST",
    data: { id: offerId },
    success: function(response) {
      console.log(response);

      if (response.message === "offer deleted successfully") {
     
        $('tr[data-offer-id="' + offerId + '"]').remove();
        $("#confirm-dialog").hide();
      }
    },
    error: function(error) {
      // Handle any errors that occurred during the request
    }
  });
});

function hideDialog() {
  $("#confirm-dialog").hide();
}


// Show the error box and set the error message
function showError(message) {
  $('#errorMessage').text(message);
  $('#errorBox').show();
}

// Hide the error box when the "OK" button is clicked
$('#errorClose').click(function() {
  $('#errorBox').hide();
});


</script>
